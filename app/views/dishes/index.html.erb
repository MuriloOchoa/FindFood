<div class="container-fluid">
  <p id="notice"><%= notice %></p>

  <h1>Pratos</h1>

  <hr>


  <table class="table">
    <thead>
    <tr>
      <th>Descrição</th>
      <th>Preço</th>
      <th>Tempo de Preparo</th>
      <th>Restaurante</th>
      <th>Categoria</th>
      <th>Ingredientes</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @dishes.each do |dish| %>
      <tr>
        <td><%= dish.description %></td>
        <td><%= dish.price %></td>
        <td><%= dish.time %></td>
        <td><%= dish.restaurant.name %></td>
        <td><%= dish.category.description %></td>
        <td><%= dish.ingredients.map(&:description).join(', ') %></td>
        <td>
          <div class="btn-group">
            <%= link_to 'Exibir', dish, :class => "btn btn-primary" %></button>
            <%= link_to 'Editar', edit_dish_path(dish), :class => "btn btn-warning" %>
            <%= link_to 'Excluir', dish, :class => "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></button>
          </div>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

</div>

<hr>

<%= link_to 'Adicionar Prato', new_dish_path, :class => "btn btn-success" %>