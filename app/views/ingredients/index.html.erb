<div class="container-fluid">
  <p id="notice"><%= notice %></p>

  <h1>Ingredientes</h1>

  <hr>

  <table class="table">
    <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.description %></td>
        <td>
          <div class="btn-group">
            <%= link_to 'Exibir', ingredient, :class => "btn btn-primary" %></button>
            <%= link_to 'Editar', edit_ingredient_path(ingredient), :class => "btn btn-warning" %>
            <%= link_to 'Excluir', ingredient, :class => "btn btn-danger", method: :delete, data: {confirm: 'Are you sure?'} %></button>
          </div>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<hr>

<%= link_to 'Adicionar Ingrediente', new_ingredient_path, :class => "btn btn-success" %>