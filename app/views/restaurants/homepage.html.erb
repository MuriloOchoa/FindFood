<div class="container-fluid">
  <div class="row">

    <div class="col-xs-8">
      <% @restaurants.all.each do |restaurant| %>
        <div class="panel panel-default">
          <div class="panel-heading">
            <h2><%= restaurant.name %></h2>
            <p>Endere√ßo: <%= restaurant.address %></p>
            <p>Telefone: <%= restaurant.telephone %></p>
          </div>
      <% end %>
      </div>
    </div>

    <div class="col-xs-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Categorias</h3>
        </div>
        <div class="panel-body">
          <ul>
            <% Category.all.each do |category| %>
              <li>
                <%= link_to category.name, homepage_restaurants_path(category_id: category.id) %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>


  </div>
</div>